doctype
html(lang=config.language)
    head
        include head
    body
        .wrap
            header
                a.logo-link(href=url_for() style="line-height: 60px;")
                    h1(style="padding: 10px; border: 2px solid #42b983; font-size: 16px; font-weight: normal; display: inline;")
                        = config.title
                include nav
            main.container
                block container
            footer
                block pagination
                block copyright
        include scripts
